# Environment Variables Example
# Copy this file to .env.local for local development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
# WebSocket URL - Use wss:// for production (secure WebSocket)
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8000/api/chat/ws

# Authentication
NEXT_PUBLIC_AUTH_DOMAIN=localhost
NEXT_PUBLIC_JWT_EXPIRES_IN=86400 # 24 hours in seconds

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false
NEXT_PUBLIC_ENABLE_MOCK_DATA=true

# External Services
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Payment (Stripe) - use test keys for development
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_example_key

# Development
NEXT_PUBLIC_ENV=development