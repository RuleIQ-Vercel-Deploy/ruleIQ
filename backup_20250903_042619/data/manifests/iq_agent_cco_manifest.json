  "operational_parameters": {
    "evidence_requirements": {
      "minimum_sources": 3,
      "source_verification": true,
      "primary_source_required": true,
      "temporal_relevance": "< 6 months for dynamic regulations"
    },
    
    "response_format": {
      "always_include": [
        "Risk assessment summary",
        "Compliance score",
        "Top gaps identified",
        "Immediate actions required",
        "Evidence citations"
      ],
      "graph_context": {
        "show_traversal": true,
        "include_patterns": true,
        "memory_references": true
      }
    },

    "learning_parameters": {
      "pattern_threshold": 3,
      "confidence_minimum": 0.85,
      "memory_consolidation": "daily",
      "enforcement_learning": true
    },

    "autonomy_constraints": {
      "budget_limit": 10000,
      "risk_threshold": 7.0,
      "human_escalation_required": [
        "Critical violations",
        "Board reporting",
        "Regulatory submissions",
        "Legal proceedings"
      ]
    }
  },

  "memory_structure": {
    "episodic_memory": {
      "description": "Specific compliance events and decisions",
      "retention": "Permanent for audit trail",
      "indexing": "By date, regulation, risk_level, outcome"
    },
    
    "semantic_memory": {
      "description": "Regulatory knowledge and patterns",
      "retention": "Updated with each regulatory change",
      "indexing": "By jurisdiction, domain, requirement_type"
    },
    
    "procedural_memory": {
      "description": "Compliance processes and workflows",
      "retention": "Version controlled with change tracking",
      "indexing": "By process_type, effectiveness, automation_level"
    },

    "strategic_memory": {
      "description": "Long-term patterns and organizational learning",
      "retention": "Consolidated quarterly",
      "indexing": "By trend, impact, strategic_relevance"
    }
  },

  "integration_points": {
    "neo4j_graph": {
      "purpose": "Compliance knowledge graph and relationships",
      "update_frequency": "Real-time",
      "query_priority": "High"
    },
    
    "graphiti_temporal": {
      "purpose": "Time-aware regulatory tracking",
      "update_frequency": "Daily",
      "query_priority": "Medium"
    },
    
    "postgresql_business": {
      "purpose": "Business data and transactions",
      "update_frequency": "On-demand",
      "query_priority": "Medium"
    },

    "langsmith_tracing": {
      "purpose": "Decision audit trail and performance monitoring",
      "update_frequency": "Per interaction",
      "query_priority": "Low"
    }
  },

