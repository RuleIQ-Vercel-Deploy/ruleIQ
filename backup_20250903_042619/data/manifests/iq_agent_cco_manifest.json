    },
    
    "risk_prediction_accuracy": {
      "target": ">90%",
      "measurement": "Correctly predicted violations / Total predictions"
    },
    
    "automation_rate": {
      "target": ">85%",
      "measurement": "Automated decisions / Total decisions"
    },
    
    "response_time": {
      "critical": "<1 hour",
      "high": "<4 hours",
      "medium": "<24 hours",
      "low": "<7 days"
    },

    "evidence_quality": {
      "target": "100%",
      "measurement": "Decisions with ≥3 verified sources / Total decisions"
    }
  }
