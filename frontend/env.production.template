# RuleIQ Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# ============================================
# CORE APPLICATION
# ============================================

# Application URL (required)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# API Configuration (required)
NEXT_PUBLIC_API_URL=https://api.your-domain.com
API_KEY=your-api-key-here

# ============================================
# REAL-TIME FEATURES (Pusher)
# ============================================

# Pusher Configuration (optional - leave empty to disable real-time features)
NEXT_PUBLIC_PUSHER_KEY=
NEXT_PUBLIC_PUSHER_CLUSTER=
PUSHER_APP_ID=
PUSHER_SECRET=

# ============================================
# DATA STORAGE (Vercel KV)
# ============================================

# Vercel KV Configuration (required for caching and session storage)
VERCEL_KV_REST_API_URL=
VERCEL_KV_REST_API_TOKEN=
VERCEL_KV_REST_API_READ_ONLY_TOKEN=

# ============================================
# SECRETS MANAGEMENT (Doppler)
# ============================================

# Doppler Configuration (recommended for production)
DOPPLER_TOKEN=
DOPPLER_PROJECT=ruleiq
DOPPLER_CONFIG=production

# ============================================
# DATABASE (Neo4j AuraDB)
# ============================================

# Neo4j Configuration (required)
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=

# ============================================
# AUTHENTICATION
# ============================================

# NextAuth Configuration (required for auth)
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# JWT Configuration
JWT_SECRET=
JWT_EXPIRY=30d

# ============================================
# AI SERVICES
# ============================================

# OpenAI Configuration (required for AI features)
OPENAI_API_KEY=
OPENAI_ORG_ID=
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (optional)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# ============================================
# MONITORING & ANALYTICS
# ============================================

# Sentry Configuration (recommended)
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# ============================================
# COMPLIANCE & SECURITY
# ============================================

# Security Headers
CSP_REPORT_URI=https://your-domain.com/api/csp-report

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://api.your-domain.com

# ============================================
# EMAIL & NOTIFICATIONS
# ============================================

# SendGrid Configuration (optional)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@your-domain.com
SENDGRID_FROM_NAME=RuleIQ

# ============================================
# FEATURE FLAGS
# ============================================

# Feature Toggles
NEXT_PUBLIC_ENABLE_PUSHER=true
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_ENABLE_FREEMIUM=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================
# DEPLOYMENT & BUILD
# ============================================

# Vercel Configuration
VERCEL_URL=
VERCEL_ENV=production
VERCEL_GIT_COMMIT_SHA=
VERCEL_GIT_COMMIT_MESSAGE=

# Build Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ============================================
# CRON JOBS & SCHEDULED TASKS
# ============================================

# Cron Secret (for securing cron endpoints)
CRON_SECRET=

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================

# Stripe (if using payment processing)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Slack (for notifications)
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=

# ============================================
# NOTES
# ============================================
# 1. Never commit this file with actual values to version control
# 2. Use Doppler or similar service for production secret management
# 3. Ensure all required variables are set before deployment
# 4. Test with production-like values in staging first
# 5. Rotate secrets regularly according to security policy