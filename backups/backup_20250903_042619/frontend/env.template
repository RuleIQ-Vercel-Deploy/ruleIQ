# ruleIQ Frontend Environment Configuration Template
# Copy this file to .env.local for local development
# DO NOT commit .env.local files to version control

# API Configuration
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for real-time features
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8000

# JWT Authentication Configuration
# Domain for JWT token validation
NEXT_PUBLIC_AUTH_DOMAIN=localhost

# JWT token expiration time in seconds (30 minutes = 1800 seconds)
NEXT_PUBLIC_JWT_EXPIRES_IN=1800

# Environment Configuration
# Environment: development, production, test
NEXT_PUBLIC_ENV=development

# Feature Flags
# Enable analytics tracking (true/false)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable Sentry error tracking (true/false)
NEXT_PUBLIC_ENABLE_SENTRY=false

# Enable mock data for development (true/false)
NEXT_PUBLIC_ENABLE_MOCK_DATA=false

# Theme Configuration
# Use new teal theme (true/false)
NEXT_PUBLIC_USE_NEW_THEME=true

# Analytics Configuration (Optional)
# Vercel Analytics ID
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# Server-side Configuration (Not exposed to client)
# Node.js environment
NODE_ENV=development

# Sentry Configuration (Optional)
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Build Configuration
# Skip environment validation during build (true/false)
SKIP_ENV_VALIDATION=false