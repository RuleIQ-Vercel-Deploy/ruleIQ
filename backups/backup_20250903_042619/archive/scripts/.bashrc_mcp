#!/bin/bash
# MCP Control Aliases for ruleIQ project

# MCP Control command alias
alias mcp="/home/omar/Documents/ruleIQ/mcp-control"

# Quick status check
alias mcp-status="/home/omar/Documents/ruleIQ/mcp-control status"

# Start all MCP servers
alias mcp-start-all="/home/omar/Documents/ruleIQ/mcp-control start all"

# Stop all MCP servers
alias mcp-stop-all="/home/omar/Documents/ruleIQ/mcp-control stop all"

# Individual server controls
alias mcp-archon="/home/omar/Documents/ruleIQ/mcp-control status | grep -A 4 Archon"
alias mcp-serena="/home/omar/Documents/ruleIQ/mcp-control status | grep -A 4 Serena"

# Dashboard UI
alias mcp-ui="cd /home/omar/mcp-manager && streamlit run mcp_dashboard.py"

# Health check
alias mcp-health="/home/omar/Documents/ruleIQ/mcp-control health"

echo "MCP Control commands loaded. Type 'mcp help' for usage."