# Production Environment Configuration for AI Assessment Freemium Strategy
# Copy to .env and fill in the actual values

# Application Configuration
ENV=production
DEBUG=false
LOG_LEVEL=info
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Database Configuration (Neon)
DATABASE_URL=postgresql://username:password@ep-xxx-pooler.region.neon.tech/neondb?sslmode=require
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://:password@redis:6379/0
REDIS_PASSWORD=your_secure_redis_password
REDIS_MAX_CONNECTIONS=20
REDIS_TIMEOUT=30

# Security Configuration
JWT_SECRET_KEY=your_256_bit_jwt_secret_key_here
FERNET_KEY=your_fernet_key_for_aes_encryption_here
SECRET_KEY=your_application_secret_key_here

# CORS and Origins
ALLOWED_ORIGINS=https://ruleiq.com,https://www.ruleiq.com
CORS_ORIGINS=https://ruleiq.com,https://www.ruleiq.com,https://app.ruleiq.com

# AI Service Configuration
GOOGLE_API_KEY=your_google_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
AI_COST_LIMIT_DAILY=100.00
AI_COST_LIMIT_HOURLY=10.00
AI_REQUEST_TIMEOUT=30
AI_RETRY_ATTEMPTS=3

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
FREEMIUM_RATE_LIMIT=50
AI_RATE_LIMIT=20
EMAIL_CAPTURE_RATE_LIMIT=5
GLOBAL_RATE_LIMIT=100

# Caching Configuration
CACHE_TTL=3600
AI_CACHE_TTL=7200
SESSION_CACHE_TTL=1800
RESULTS_CACHE_TTL=3600

# Email/Newsletter Integration
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_freemium_list_id
SENDGRID_API_KEY=your_sendgrid_api_key
NOTIFICATION_EMAIL=alerts@ruleiq.com

# Analytics and Tracking
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
AMPLITUDE_API_KEY=your_amplitude_key
HOTJAR_ID=your_hotjar_id

# Monitoring and Alerting
SENTRY_DSN=your_sentry_dsn_for_error_tracking
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=your_secure_grafana_password
ALERT_WEBHOOK_URL=your_slack_webhook_for_alerts

# SSL and Security
SSL_CERT_PATH=/etc/nginx/ssl/ruleiq.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/ruleiq.com.key
FORCE_HTTPS=true
SECURE_HEADERS=true

# CDN and Assets
CDN_URL=https://cdn.ruleiq.com
STATIC_URL=https://static.ruleiq.com
MEDIA_URL=https://media.ruleiq.com

# Payment Integration (for conversion)
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
STRIPE_SECRET_KEY=sk_live_xxxxx
PADDLE_VENDOR_ID=your_paddle_vendor_id
PADDLE_API_KEY=your_paddle_api_key

# Feature Flags
FREEMIUM_ENABLED=true
AI_ASSESSMENT_ENABLED=true
CONVERSION_TRACKING_ENABLED=true
AB_TESTING_ENABLED=true
LEAD_SCORING_ENABLED=true

# Performance Configuration
ENABLE_GZIP=true
ENABLE_BROTLI=true
STATIC_FILE_CACHING=31536000
API_RESPONSE_CACHING=300

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ruleiq-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Legal and Compliance
PRIVACY_POLICY_URL=https://ruleiq.com/privacy
TERMS_OF_SERVICE_URL=https://ruleiq.com/terms
COOKIE_CONSENT_ENABLED=true
GDPR_COMPLIANCE_MODE=true

# Development and Testing (Production values)
PYTEST_ENABLED=false
COVERAGE_REPORTS=false
DEBUG_TOOLBAR=false
PROFILING_ENABLED=false